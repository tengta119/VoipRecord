<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="together">

    <objectAnimator
        android:targetName="line_far_left"
        android:propertyName="scaleY"
        android:duration="420"
        android:valueFrom="1.0"
        android:valueTo="1.8"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:interpolator="@android:interpolator/accelerate_decelerate" />

    <objectAnimator
        android:targetName="line_left"
        android:propertyName="scaleY"
        android:duration="350"
        android:valueFrom="1.0"
        android:valueTo="2.4"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:interpolator="@android:interpolator/accelerate_decelerate" />

    <objectAnimator
        android:targetName="line_center"
        android:propertyName="scaleY"
        android:duration="280"
        android:valueFrom="1.0"
        android:valueTo="3.0"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:interpolator="@android:interpolator/accelerate_decelerate" />

    <objectAnimator
        android:targetName="line_right"
        android:propertyName="scaleY"
        android:duration="350"
        android:valueFrom="1.0"
        android:valueTo="2.4"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:interpolator="@android:interpolator/accelerate_decelerate" />

    <objectAnimator
        android:targetName="line_far_right"
        android:propertyName="scaleY"
        android:duration="420"
        android:valueFrom="1.0"
        android:valueTo="1.8"
        android:repeatCount="infinite"
        android:repeatMode="reverse"
        android:interpolator="@android:interpolator/accelerate_decelerate" />

</set>