<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/floating_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:minWidth="100dp"
    android:background="@drawable/bg_floating_window_rounded"
    android:paddingBottom="20dp"
    android:elevation="10dp">

    <LinearLayout
        android:id="@+id/dragHandle"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <View
            android:layout_width="32dp"
            android:layout_height="15dp"
            android:background="@drawable/ic_drag_handle" />
    </LinearLayout>

    <ImageView
        android:id="@+id/recording_animation_view"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:src="@drawable/avd_recording_flow"/>

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="空闲中"
        android:textColor="?android:textColorPrimary"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

</LinearLayout>